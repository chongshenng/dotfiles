export PS1='\u@mac \W:~\$ '
alias trm='echo $TERM'

#-- Conda environment and Jupyter Lab
alias jl='jupyter lab'

#-- tmux 
alias tmux='tmux -2'
alias t="tmux"
alias ta="t a -t"
alias tls="t ls"
alias tn="t new -t"

#-- Lifesavers
alias ls='ls -Ga'
alias ll='ls -l'
alias llrt='ll -rth'
alias lls='ll -l --block-size=MB'
alias la='ls -a'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias grep='grep --color=auto'

alias df='/bin/df -PH'
alias du='/usr/bin/du -kh'
